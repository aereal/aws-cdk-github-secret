{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2018"],
    "module": "commonjs",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "./built",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2018"
  },
  "include": [
    "src/",
    "test/"
  ],
  "exclude": [
    "cdk.out",
    "node_modules"
  ]
}
